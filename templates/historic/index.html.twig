{% extends 'base.html.twig' %}


{% block title %}Historic
{% endblock %}

{% block content %}

	<br><br><br><br><br><br><br><br>
	<!-- met le tableau ici stp -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-heading">Your historic recipes</div>
					<table class="table table-hover">
						<thead style="background-color: #f0f0f0;">
							<tr>
								<th>ID</th>
								<th>Recipe Title</th>
								<th>Recipe Creator</th>
								<th>Recipe Status</th>
								<th>Score</th>
							</tr>
						</thead>
						<tbody>
							{% for recipe in recipes %}
								<tr>
									<td>{{ recipe.id }}</td>
									<td>{{ recipe.titleRecipe }}</td>
									<td>{{ recipe.creatorRecipe.firstname ~ ' ' ~ recipe.creatorRecipe.lastname }}</td>
									<td>
										{% if recipe.status is null %}
											En cours de traitement
										{% else %}
											{{ recipe.status }}
										{% endif %}
									</td>
									<td>
										{% if recipe.score is null %}
											En cours de traitement
										{% else %}
											{{ recipe.score }}
										{% endif %}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
